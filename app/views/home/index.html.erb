

  <!-- Begin Page Content -->
  <div data-controller="home" class="container-fluid">

    <!-- Page Heading -->
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert alert-#{name}" %>
    <% end %>
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
      <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    </div>

    <div class="row">
       <div class="col-lg-4">
        <div class="mb-4">
          <div>
            <div class="card shadow py-2 mb-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="font-weight-bold text-primary text-uppercase mb-1">Pacientes cadastrados</div>
                      <div class="font-size-5 mb-0 font-weight-bold text-gray-800"><%= patients_count %></div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
            </div>
          </div>
          <div>
            <div class="card shadow py-2 mb-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="font-weight-bold text-primary text-uppercase mb-1">Exames cadastrados</div>
                      <div class="font-size-5 mb-0 font-weight-bold text-gray-800"><%= exams_count %></div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-x-ray fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
            </div>
          </div>

        </div>
      </div>

      <div class="col">
        <div>
          <div class="card w-100 border-left-success shadow py-2 mb-2 mb-2 mb-lg-0">
              <div class="card-body p-2 pl-4">
                <div>
                  <div class="mr-2">
                    <div class="font-size-2 mb-0 text-gray-800">Encontre qualquer paciente cadastrado no sistema</div>
                    <div class="mt-2">
                      <a href="<%= patients_path %>" class=" btn btn-sm btn-primary shadow-sm"><i class="fas fa-search fa-sm text-white-50"></i> Pesquisar paciente</a>
                    </div>

                    <hr>

                    <div class="font-size-2 mb-0 text-gray-800">Cadastre um novo paciente</div>
                    <div class="mt-2">
                      <a href="<%= new_patient_path %>" class=" btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus fa-sm text-white-50"></i> Cadastrar paciente</a>
                    </div>

                    <hr>

                    <div class="font-size-2 mb-0 text-gray-800">Busque exames cadastrados no sistema</div>
                    <div class="mt-2">
                      <a href="<%= exams_path %>" class=" btn btn-sm btn-primary shadow-sm"><i class="fas fa-search fa-sm text-white-50"></i> Pesquisar exames</a>
                    </div>

                    <hr>

                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>
      <!-- Content Row -->

    </div>

  </div>
  <!-- /.container-fluid -->

<%= javascript_pack_tag 'home' %>
