  <div class="container">
        <!-- Nested Row within Card Body -->
        <div class="row justify-content-center">
          <div class="col-12 col-lg-7">
            <div class="card o-hidden border-0 shadow-lg my-5">
              <div class="card-body p-0">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Criar conta</h1>
                  </div>

                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'user'}) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <div class="form-group">
                      <%= f.text_field :name, autofocus: true, class: 'form-control form-control-user', placeholder: 'Nome' %>
                    </div>

                    <div class="form-group">
                      <%= f.email_field :email, autocomplete: "email", class: 'form-control form-control-user', placeholder: 'Email' %>
                    </div>

                  <div class="form-group row">
                      <div class="col-sm-6 mb-3 mb-sm-0">
                        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-user', placeholder: 'Senha' %>
                      </div>
                      <div class="col-sm-6">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-user', placeholder: 'Confirmar senha' %>
                      </div>
                    </div>

                    <div class="actions">
                      <%= f.submit "Criar conta", class: 'btn btn-primary btn-user btn-block' %>
                    </div>
                  <% end %>

                  <hr>
                  <div class="text-center">
                    <a class="small" href="forgot-password.html"></a>
                    <%= link_to "Esqueceu sua senha?", new_user_password_path, class: 'small' %>
                  </div>
                  <div class="text-center">
                    <%= link_to "JÃ¡ possui uma conta? Login!", new_user_session_path, class: 'small' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
  </div>


